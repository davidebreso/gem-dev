	push	di
	mov	al, bl
	mov	ah, es:[di]			;get the dest byte
	xor	ah, al				;xor in the source data
	and	ah, dl				;apply the left mask
	xor	al, ah				;xor in the source data
	if	byte_swap
	 mov	es:[di], al
	 xor	di, 1
	 inc	di
	 xor	di, 1
	else
	 stosb					;apply the byte
	endif					;apply the byte
