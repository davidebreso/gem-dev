	cmp	di, ss:true_plane_iize
	jc	txtblt_xor_rl_i_wide_end
	sub	di, ss:true_plane_iize
	mov	al, ss:current_bank
	inc	al
	cmp	al, 0c7h			;past last bank?
	jnz	txtblt_xor_rl_i_wide_end_mono
	mov	al, 0c0h
	add	di, bytes_line
txtblt_xor_rl_i_wide_end_mono:
	mov	ss:current_bank, al
	mov	es:.mono_mem_off, al
endif
if mono_port
	cmp	di, ss:true_plane_iize			;have we wrapped past the end?
	jc	txtblt_xor_rl_i_wide_end
	call	next_ieg_pgdown
endif
if multiseg
	cmp	di, ss:true_plane_iize
	jc	txtblt_xor_rl_i_wide_end
	add	di, ss:true_to_first
endif
txtblt_xor_rl_i_wide_end:
	dec	cl
	jnz	txtblt_xor_rl_i_wide
	ret

endif	;byte_swap

